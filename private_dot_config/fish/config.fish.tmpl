# $SHELL
if type -sq fish
  set -gx SHELL (type -P fish)
end

# $EDITOR
set -gx EDITOR (type -P vi)

# $GIT_EDITOR
if type -sq nvim
  set -gx GIT_EDITOR (type -P nvim)
end

{{- if eq .chezmoi.os "darwin" }}
if test -f ~/.iterm2_shell_integration.fish
  source ~/.iterm2_shell_integration.fish
end
{{- end }}

fish_add_path ~/.local/bin
